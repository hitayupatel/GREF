<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.hitayu.gref11.TextCompletionActivity">

    <TextView
        android:id="@+id/one_blank_type"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="One Blank Questions"
        android:background="@drawable/rounded_text_corner"
        android:textAlignment="center"
        android:paddingTop="15dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/two_blank_type"
        android:text="Two Blank Questions"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/one_blank_type"
        android:layout_marginTop="40dp"
        android:paddingTop="15dp"
        android:background="@drawable/rounded_text_corner"
        android:textColor="#000000" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/three_blank_type"
        android:text="Three Blank Questions"
        android:layout_below="@id/two_blank_type"
        android:textAlignment="center"
        android:paddingTop="15dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_text_corner"
        android:textColor="#000000"
        />


</RelativeLayout>
